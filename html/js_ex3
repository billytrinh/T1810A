	<script type="text/javascript">
		function changeColor2(){

		}
		function changeColor(){
			var input_text= document.getElementById("input_text");
			var color = input_text.value;
			if(color.length < 1){
				//input_text.style.border = '1px solid red';
				//them class
				input_text.classList.add('abcxyz');
				//xoaclass
				input_text.classList.remove('aaa');

				var outer = input_text.outerHTML;
				outer += '<p>VUi long nhap thong tin</p>';
				input_text.outerHTML = outer;
			}else{
				input_text.style.border = '1px solid green';
				var box = document.getElementById("box_1");	
				box.style.color = color;
			}
			
		}
		function xanh(){
			var box = document.getElementById("box_1");
			box.style.backgroundColor = 'green';
		}
		function maudo(){
			var box = document.getElementById("box_1");
			box.style.backgroundColor = 'red';
		}
		function changeHtml() {
			var box = document.getElementById("box_1");
			//var xyz = box.innerHTML;
			//xyz += '<p>hello</p>';
			//box.innerHTML = xyz;
			//box.innerText = 'Good morning';
			// box.style.backgroundColor = 'green';
			// box.style.color = 'red';
			// box.style.fontSize = '100px';
			if(box.style.display == 'none'){
				box.style.display = 'block';
			}else{
				box.style.display = 'none';
			}
		}
	
		function tangfontsize(){
			var box = document.getElementById("box_1");	
			var x = box.style.fontSize;
			x = parseInt(x);
			//console.log(x);
			if(isNaN(x)){
				x = 14;
			}
			x += 5;
			x = x+ 'px';
			box.style.fontSize = x;
		}
